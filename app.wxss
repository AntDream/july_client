/**app.wxss**/

page {
  background: #f7f7f7;
  font-family: "苹方";
  font-size: 28rpx;
  box-sizing: border-box; /* 宽度包含 */
  color: #333;
  letter-spacing: 2rpx; /* 字间距 */
  word-wrap: break-word; /* 长词汇换行 */
}

button::after {
  border: none;
}

image {
  display: block;
  height: auto;
  width: auto;
}

.container {
  height: 100%;
  width: 100%;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  padding: 10rpx 30rpx;
}
