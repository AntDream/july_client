<!--pages/following/index.wxml-->

<!-- nothing -->
<nothing wx:if="{{followingList.length == 0}}" pic="../../images/icon_nothing/pic_follow.png" tip="暂时没有关注任何人" />

<!-- 我的关注 -->
<l-list wx:for="{{followingList}}" wx:key="item" title="{{item.follow_user.nick_name}}" desc="{{item.follow_user.signature}}" image="{{item.follow_user.avatar}}" gap="30" tag-content="{{item.has_follow ? '取消关注' : '+ 关注'}}" tag-plain="{{item.has_follow}}"
  tag-position="right" tagShape="circle" tag-color="#337559" is-link="{{false}}" l-class="list" l-image-class="list-avatar" l-desc-class="list-desc" />